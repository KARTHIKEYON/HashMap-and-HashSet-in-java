import java.util.*;

public class RomanToInteger {
    public static int romanToInteger(String s) {
        Map<Character, Integer> values = new LinkedHashMap<>();
        values.put('I', 1);
        values.put('V', 5);
        values.put('X', 10);
        values.put('L', 50);
        values.put('C', 100);
        values.put('D', 500);
        values.put('M', 1000);

        int number = 0;
        for (int i = 0; i < s.length(); i++) {
            char c = s.charAt(i);
            if (!values.containsKey(c)) {
                throw new IllegalArgumentException("Invalid Roman numeral character: " + c);
            }
            if (i + 1 < s.length() && values.get(c) < values.get(s.charAt(i + 1))) {
                number -= values.get(c);
            } else {
                number += values.get(c);
            }
        }
        return number;
    }
    

    public static void main(String[] args) {
       
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter a Roman numeral: ");
        String s = sc.nextLine();
        RomanToInteger obj = new RomanToInteger();
        int result = obj.romanToInteger(s);
        System.out.println("The integer value of the Roman numeral is: " + result);
    }


}

output:
Enter a Roman numeral: 
XX
The integer value of the Roman numeral is: 20
